{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./src"  // this allows `src/types.d.ts` to be picked up
    ]
  },
  "include": ["src"],
  "exclude": ["tests"]
}
